<UserControl x:Class="BookStore.Presentation.Views.AddNewBookToStoreView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BookStore.Presentation.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" d:Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical">
            <Label Content="Select a Book to add it to the selected store" FontSize="15" FontWeight="Bold" Margin="0,2,0,0"/>
            <StackPanel Orientation="Horizontal">
            <Label Content="Selected Store:" FontSize="15" FontWeight="Bold" Margin="0,2,0,0"/>
            <Label Content="{Binding SelectedStore.Name}" FontSize="15" FontWeight="Bold" Margin="0,2,0,0"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal">
                <Label Content="Selected book:" FontSize="15" FontWeight="Bold" Margin="0,2,0,0"/>
                <Label Content="{Binding SelectedBook.Title}" FontSize="15" FontWeight="Bold" Margin="0,2,0,0"/>
            </StackPanel>

            <Button Content="Add Book to Store" Command="{Binding AddBookToStoreCommand}" Height="28" Width="100" Margin="4,0,0,6" HorizontalAlignment="Left"/>
        </StackPanel>
        <DataGrid Grid.Row="1" ItemsSource="{Binding AllBooksInStores}" SelectedItem="{Binding SelectedBook}"/>
        <!--En datagrid som visar böckerna som inte finns i den valda butiken-->
        <!--En knapp för att lägga till valda bok till butikens lager-->
    </Grid>
</UserControl>
