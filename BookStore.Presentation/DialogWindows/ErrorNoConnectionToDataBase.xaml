<Window x:Class="BookStore.Presentation.DialogWindows.ErrorNoConnectionToDataBase"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookStore.Presentation.DialogWindows"
        mc:Ignorable="d"
            Title="Error No Connection To database" Height="130" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <fa:IconImage Icon="Warning" Width="20" Height="20" Margin="0,10,0,0"/>
            <Label Content="No Connection to database could be established" Width="auto" HorizontalContentAlignment="Center" Margin="0,0,0,-12"/>
            <Label Content="Check your connection" Width="auto" HorizontalContentAlignment="Center"/>
            <Button Content="ok" IsCancel="True" Width="60"/>
        </StackPanel>
    </Grid>
</Window>
